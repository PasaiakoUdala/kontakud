{% extends 'base.html.twig' %}

{% block page_header %}
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="Default button group">
                <a id="btnArretaSave" class="btn btn-primary" href="#">{{ "Arreta Gorde" | trans }}</a>
                <a id="btnArretaClose" class="btn btn-primary btn-success" href="#">{{ "Arreta Itxi" | trans }}</a>
                <a id="btnArretaEzabatu" class="btn btn-primary btn-danger" href="#">{{ "Arreta Ezabatu" | trans }}</a>
            </div>
        </div>
        <div class="col-md-4" id="alertSpot">

            {% for type, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    <div id="divAlertSpot" class="alert alert-{{ type }} fade in alert-dismissible nirealert"
                         role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        {{ flash }}
                    </div>
                {% endfor %}
            {% endfor %}

        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="hidden">
            {{ form_start(delete_form, {'attr': {'id': 'frmEzabatuArreta'}}) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="row">&nbsp;</div>
{% endblock page_header %}

{% block content_content %}

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
            <a href="#datuak" aria-controls="home" role="tab" data-toggle="tab">Datos</a>
        </li>
        <li role="presentation">
            <a href="#tramites" aria-controls="profile" role="tab" data-toggle="tab">Tramites</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">

        {#Datos Tab#}
        <div role="tabpanel" class="tab-pane active" id="datuak">
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">

                    {{ form_start(edit_form, {'attr': {'id': 'frmArretaEdit'}}) }}

                    <div class="form-group">
                        {{ form_label(edit_form.kanala) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.kanala) }}
                        </div>
                        {{ form_errors(edit_form.kanala) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.remitente) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.remitente) }}
                        </div>
                        {{ form_errors(edit_form.remitente) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.genero) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.genero) }}
                        </div>
                        {{ form_errors(edit_form.genero) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.adina) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.adina) }}
                        </div>
                        {{ form_errors(edit_form.adina) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.nazionalitatea) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.nazionalitatea) }}
                        </div>
                        {{ form_errors(edit_form.nazionalitatea) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.hizkuntza) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.hizkuntza) }}
                        </div>
                        {{ form_errors(edit_form.hizkuntza) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.barrutia) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.barrutia) }}
                        </div>
                        {{ form_errors(edit_form.barrutia) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.administrazioa) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.administrazioa) }}
                        </div>
                        {{ form_errors(edit_form.administrazioa) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.oharra) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.oharra) }}
                        </div>
                        {{ form_errors(edit_form.oharra) }}
                    </div>

                    <div class="hidden">
                        {{ form_row(edit_form.user) }}
                        {{ form_row(edit_form.fetxa) }}
