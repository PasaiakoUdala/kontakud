{% extends 'base.html.twig' %}

{% block page_header %}
    <div class="row">
        {#<div class="col-md-1"><a class="btn btn-success" href="{{ path('admin_arreta_new') }}">Arreta berria</a></div>#}
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <div class="col-md-1"><a id="btnArretaGorde" class="btn btn-primary" href="javascript:void(0);">Arreta
                                                                                                        Amaitu</a></div>
    </div>
    <div class="row">&nbsp;</div>
{% endblock page_header %}

{% block content_content %}

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
            <a href="#datuak" aria-controls="home" role="tab" data-toggle="tab">Datos</a>
        </li>
        <li role="presentation">
            <a href="#tramites" aria-controls="profile" role="tab" data-toggle="tab">Tramites</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">

        {#Datos Tab#}
        <div role="tabpanel" class="tab-pane active" id="datuak">
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">

                    {{ form_start(edit_form) }}

                    <div class="form-group">
                        {{ form_label(edit_form.kanala) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.kanala) }}
                        </div>
                        {{ form_errors(edit_form.kanala) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.remitente) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.remitente) }}
                        </div>
                        {{ form_errors(edit_form.remitente) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.genero) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.genero) }}
                        </div>
                        {{ form_errors(edit_form.genero) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.adina) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.adina) }}
                        </div>
                        {{ form_errors(edit_form.adina) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.nazionalitatea) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.nazionalitatea) }}
                        </div>
                        {{ form_errors(edit_form.nazionalitatea) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.hizkuntza) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.hizkuntza) }}
                        </div>
                        {{ form_errors(edit_form.hizkuntza) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.barrutia) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.barrutia) }}
                        </div>
                        {{ form_errors(edit_form.barrutia) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.administrazioa) }}
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.administrazioa) }}
                        </div>
                        {{ form_errors(edit_form.administrazioa) }}
                    </div>

                    <div class="hidden">
                        {{ form_row(edit_form.user) }}
                        {{ form_row(edit_form.fetxa) }}
                        {{ form_row(edit_form.nan) }}
                    </div>

                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>

        {#Tramites Tab#}
        <div role="tabpanel" class="tab-pane" id="tramites">
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" id="cmdZerbikat" class="btn btn-primary" data-toggle="modal"
                                data-target="#modal-zerbikat">Zerbikat
                        </button>
                        <button type="button" id="cmdGerkud" class="btn btn-primary" data-toggle="modal"
                                data-target="#modal-gerkud">Gerkud
                        </button>
                        <button type="button" id="cmdInformacion"
                                class="btn btn-primary">{{ "Información" | trans }}</button>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Nº</th>
                            <th>Tramite</th>
                            <th>Notas</th>
                            <th>Resultado</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for t in arreta.tramiteak %}
                            <tr>
                                <td>{{ t.id }}</td>
                                <td>{{ t.name }}</td>
                                <td></td>
                                <td>
                                    <ul class="list-inline">
                                        <li><input type="radio"></li>
                                        <li>aaa</li>
                                        <li>aaa</li>
                                    </ul>
                                </td>
                                <td><a data-tramiteid="{{ t.id }}" href="#">Edit</a></td>
                            </tr>
                            <div class="modal fade" id="modal-tramite-edit-{{ t.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog  modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close"><span
                                                        aria-hidden="true">&times;</span>
                                            </button>
                                            <h4 class="modal-title" id="myModalLabel{{ t.id }}">Zerbikat</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                {{ render(controller('AppBundle:Tramite:edit', {'id' : t.id})) }}
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Itxi
                                            </button>
                                            <button type="button" class="btn btn-primary">Gorde
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>

        <div class="hidden">
            {{ render(controller('AppBundle:Tramite:new', {'arretaid': arreta.id})) }}
        </div>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="modal-zerbikat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Zerbikat</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="cmbFamilia" multiple class="form-control" size="9">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="cmbAzpiFamilia" multiple class="form-control" size="9">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="cmbFitxa" multiple class="form-control" size="9">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Itxi</button>
                    <button id="btn-modal-gorde" type="button" class="btn btn-primary">Gorde</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modal-gerkud" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Gerkud</h4>
                </div>
                <div class="modal-body">
                    <form id="frmGerkud">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="txtGerkudFetxa" class="control-label">Data:</label>
                                    <input type="text" class="form-control" name="data[date]" id="txtGerkudFetxa">
                                </div>
                                <div class="col-sm-6">
                                    <label for="txtGerkudFullName" class="control-label">Izen Abizenak:</label>
                                    <input type="text" class="form-control" name="data[user][fullname]"
                                           id="txtGerkudFullName">
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="txtGerkudBarrutia" class="control-label">Barrutia:</label>
                                    <input type="text" class="form-control" name="data[address][locality]"
                                           id="txtGerkudBarrutia">
                                </div>
                                <div class="col-sm-6">
                                    <label for="txtGerkudHelbidea" class="control-label">Helbidea:</label>
                                    <input type="text" class="form-control" name="data[address][address]"
                                           id="txtGerkudHelbidea">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="txtGerkudEmail" class="control-label">Email:</label>
                                    <input type="text" class="form-control" name="data[user][mail]" id="txtGerkudEmail">
                                </div>
                                <div class="col-sm-6">
                                    <label for="txtGerkudTelf" class="control-label">telf:</label>
                                    <input type="text" class="form-control" name="data[user][phone]" id="txtGerkudTelf">
                                </div>
                            </div>


                            <label for="txtGerkudNotify" class="control-label">Solicita que se le notifique:</label>
                            <input type="checkbox" name="data[user][notify]" id="txtGerkudNotify">
                        </div>
                        <div class="form-group">
                            <label for="txtGerkudOharrak">Oharrak</label>
                            <textarea id="txtGerkudOharrak" class="form-control" rows="3" name="data[comments]"
                                      placeholder=""></textarea>
                        </div>
                        <input type="hidden" name="data[version]" value="2">
                        <input type="hidden" name="data[key]" value="37d12d33075dc1ecb558042391bc3676">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Itxi</button>
                    <button id="btnGerkudSave" type="button" class="btn btn-primary">Gorde</button>
                </div>
            </div>
        </div>
    </div>

    <input id="txtLocale" type="hidden" value="{{ app.request.locale }}">

{% endblock %}

{% block foot_script %}
    {{ parent() }}

    <script>

        $(document).ready(function () {
            var url = "http://zerbikat.sare.gipuzkoa.net/api/familiaks/064.json";
            $.getJSON(url, function( data ) {
                $.each( data, function( key, val ) {
                    if (!("parent" in val)) {
                        if ( $('#txtLocale').val() === "eu" ) {
                            $('#cmbFamilia').append("<option value='" + val.id + "'>" + val.familiaeu + "</option>");
                        } else {
                            $('#cmbFamilia').append("<option value='" + val.id + "'>" + val.familiaes + "</option>");
                        }
                    }
                });
            }).fail(function(jqXHR, textStatus, errorThrown) {
                console.log("error " + textStatus);
                console.log("incoming Text " + jqXHR.responseText);
            });
        });

    </script>
{% endblock %}