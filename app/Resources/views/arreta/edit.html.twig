                                    }).done(function ( data ) {
                    console.log("OK");
                    console.log(data);
                    console.log("OK");
                    location.reload();
                }).fail(function ( XMLHttpRequest, textStatus, errorThrown ) {
                    console.log("ERROR");
                    console.log(XMLHttpRequest);
                    console.log(textStatus);
                    alert(textStatus);
                    console.log(errorThrown);
                    console.log("ERROR");
                });
            });

        });

    </script>
