{% extends 'base.html.twig' %}


{% block headline %}
    <div class="row">
        <div class="col-md-1"><a href="#">froga</a></div>
        <div class="col-md-10"></div>
        <div class="col-md-1"><a href="#dd">dddd</a></div>
    </div>

{% endblock headline %}
{% block content_content %}


    <div>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#datuak" aria-controls="home" role="tab" data-toggle="tab">Datos</a></li>
            <li role="presentation"><a href="#tramites" aria-controls="profile" role="tab" data-toggle="tab">Tramites</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">

            {#Datos Tab#}
            <div role="tabpanel" class="tab-pane active" id="datuak">
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-12">
                        {{ render(controller('AppBundle:Arreta:new')) }}
                    </div>
                </div>
            </div>

            {#Tramites Tab#}
            <div role="tabpanel" class="tab-pane" id="tramites">
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div class="btn-group" role="group" aria-label="...">
                            <button type="button" id="cmdZerbikat" class="btn btn-primary">Zerbikat</button>
                            <button type="button" id="cmdGerkud" class="btn btn-primary">Gerkud</button>
                            <button type="button" id="cmdInformacion" class="btn btn-primary">{{ "Información" | trans }}</button>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Nº</th>
                                <th>Tramite</th>
                                <th>Resultado</th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>
        </div>

    </div>


    <!-- Modal -->
    {#<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">#}
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Zerbikat</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="cmbFamilia" multiple class="form-control" size="9">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="cmbAzpiFamilia" multiple class="form-control" size="9">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="cmbFitxa" multiple class="form-control" size="9">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Itxi</button>
                    <button type="button" class="btn btn-primary">Gorde </button>
                </div>
            </div>
        </div>
    {#</div>#}

    <input id="txtLocale" type="hidden" value="{{ app.request.locale }}">

{% endblock content_content %}

{% block content_sidebar %}
    <div class="row">
        <div class="col-xs-12">
            <label for="txtNan">N.A.N.</label>
            <input id="txtNan" name="txtNan" type="text" value="">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <label>Etxebizitza Zenbakia <span id="txtBizilekuZenbakia"></span></label>
        </div>
    </div>
{% endblock content_sidebar %}
