{% extends 'base.html.twig' %}

{% block headline %}
    Tramite moten kudeaketa
{% endblock headline %}

{% block subheadline %}
    <div class="page-header">
        <ul class="list-inline">
            <li>
                <a class="btn btn-primary" href="{{ path('admin_mota_new') }}"><i class="fa fa-plus-square" aria-hidden="true"></i> Berria</a>
            </li>
        </ul>
    </div>
{% endblock subheadline %}


{% block content %}

    <div class="col-sm-12">
        <table class="table table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Izena (eus)</th>
                <th>Izena (cas)</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for mota in motas %}
                <tr>
                    <td><a href="{{ path('admin_mota_edit', { 'id': mota.id }) }}">{{ mota.id }}</a></td>
                    <td>{{ mota.name }}</td>
                    <td>{{ mota.namees }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('admin_mota_edit', { 'id': mota.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            </li>
                            <li>
                                {{ form_start(deleteforms[mota.id],{'attr': {'id': 'deleteMotaForm' ~ mota.id}}) }}
                                <a class="btnDelete" data-miid="{{ mota.id }}" href="#"><i class="fa fa-trash text-danger"></i></a>
                                {{ form_end(deleteforms[mota.id]) }}
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
{% block foot_script %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('.btnDelete').on('click', function () {
                var r = confirm("{{ 'messages.ziurzaude'|trans }}");
                if ( r === true ) {
                    var miid = $(this).data("miid");
                    var frm = "#deleteMotaForm" + miid;

                    $(frm).submit();
                }
            })
        })
    </script>

{% endblock %}