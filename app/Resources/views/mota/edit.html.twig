{% extends 'base.html.twig' %}

{% block headline %}
    Tramite moten kudeaketa
{% endblock headline %}

{% block subheadline %}
    <div class="page-header">
        <ul class="list-inline">
            <li>
                <a class="btn btn-primary" href="{{ path('admin_mota_index') }}"><i class="fa fa-arrow-left" aria-hidden="true"></i> Itzuli</a>
                <a id="btnSave" class="btn btn-primary" href="javascript:void(0);"><i class="fa fa-floppy-o" aria-hidden="true"></i> Gorde </a>
            </li>
        </ul>
    </div>
{% endblock subheadline %}

{% block content %}

    <div class="col-sm-12">
        {{ form_start(edit_form, {'attr': {'id': 'frmNew'}}) }}
        {{ form_widget(edit_form) }}
        {{ form_end(edit_form) }}
    </div>

{% endblock %}

{% block foot_script %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('#btnSave').on('click', function () {
                $("#frmNew").submit();
            })
        });
    </script>
{% endblock %}
