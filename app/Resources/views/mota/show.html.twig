{% extends 'base.html.twig' %}

{% block body %}
    <h1>Motum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ motum.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ motum.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if motum.created %}{{ motum.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if motum.updated %}{{ motum.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Contentchangedby</th>
                <td>{{ motum.contentChangedBy }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_mota_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_mota_edit', { 'id': motum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
