{% extends 'base.html.twig' %}

{% block body %}
    <h1>Results list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Contentchangedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td><a href="{{ path('admin_result_show', { 'id': result.id }) }}">{{ result.id }}</a></td>
                <td>{{ result.name }}</td>
                <td>{% if result.created %}{{ result.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if result.updated %}{{ result.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ result.contentChangedBy }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_result_show', { 'id': result.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_result_edit', { 'id': result.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_result_new') }}">Create a new result</a>
        </li>
    </ul>
{% endblock %}
